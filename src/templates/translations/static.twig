{% extends "pragmatic-web-toolkit/translations/_layout" %}

{% set title = "Static"|t('pragmatic-web-toolkit') %}

{% set selectedTab = 'static' %}

{% set crumbs = [
    { label: "Translations"|t('pragmatic-web-toolkit'), url: url('pragmatic-toolkit/translations', { site: selectedSite.handle }) },
    { label: "Static"|t('pragmatic-web-toolkit'), url: url('pragmatic-toolkit/translations/static', { site: selectedSite.handle }) },
] %}
{% import "_includes/forms" as forms %}
{% block sidebar %}
  <nav aria-label="{{ "Groups"|t('pragmatic-web-toolkit') }}">
    <ul class="nav">
      <li>
        <a class="{{ group == '' ? 'sel' : '' }}" href="{{ url('pragmatic-toolkit/translations/static', { site: selectedSite.handle, q: search, perPage: perPage }) }}">
          {{ "View all entries"|t('pragmatic-web-toolkit') }}
        </a>
      </li>
      {% if sidebarGroups is defined and sidebarGroups|length %}
        <li class="heading"><span>{{ "Groups"|t('pragmatic-web-toolkit') }}</span></li>
        {% for groupRow in sidebarGroups %}
          {% set groupName = groupRow.name %}
          <li>
            <a class="{{ groupName == group ? 'sel' : '' }}" href="{{ url('pragmatic-toolkit/translations/static', { site: selectedSite.handle, group: groupName, q: search, perPage: perPage }) }}">
              {{ groupName }}
            </a>
          </li>
        {% endfor %}
      {% endif %}
      <li class="heading pwt-sidebar-sections-separator"><span>{{ "Sections"|t('pragmatic-web-toolkit') }}</span></li>
      <li>
        <a href="#translations-export-import">
          {{ "Export and import"|t('pragmatic-web-toolkit') }}
        </a>
      </li>
      <li>
        <a href="#translations-manage-groups">
          {{ "Manage groups"|t('pragmatic-web-toolkit') }}
        </a>
      </li>
    </ul>
  </nav>
{% endblock %}

{% block content %}
  {% css %}
    .pwt-static-toolbar {
      position: sticky;
      top: 0;
      z-index: 20;
      background: #fff;
      padding: 10px 0;
      border-bottom: 1px solid #e5e7eb;
    }
    .pwt-toolbar-separator {
      width: 1px;
      height: 28px;
      background: #d1d5db;
      align-self: flex-end;
      margin: 0 2px 0 4px;
    }
    .pwt-hide-empty-wrap {
      display: flex;
      align-items: center;
      margin-bottom: 2px;
    }
    .pwt-translate-selected-btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }
    .pwt-translate-selected-btn:disabled,
    .pwt-translate-selected-btn.disabled {
      opacity: .5;
      cursor: not-allowed;
      pointer-events: none;
    }
    .pwt-sidebar-sections-separator {
      margin-top: 14px;
      padding-top: 12px;
      border-top: 1px solid #e5e7eb;
    }
  {% endcss %}

  {% set currentLanguage = selectedSite.language ?? '' %}
  {% set orderedLanguages = [] %}
  {% if currentLanguage and currentLanguage in languages %}
    {% set orderedLanguages = orderedLanguages|merge([currentLanguage]) %}
  {% endif %}
  {% for language in languages %}
    {% if language != currentLanguage %}
      {% set orderedLanguages = orderedLanguages|merge([language]) %}
    {% endif %}
  {% endfor %}

  <div class="flex flex-row align-center pwt-static-toolbar" style="margin-top: 12px; gap: 16px; justify-content: space-between; width:100%;">
      <div class="flex align-center">
        <form method="get" id="entries-filter" class="flex" style="gap: 12px; align-items: flex-end;">
          <input type="hidden" name="page" value="1">
          <input type="hidden" name="site" value="{{ selectedSite.handle }}">
          <input type="hidden" name="group" value="{{ group }}">
          <div>
            <label for="q">{{ "Search"|t('pragmatic-web-toolkit') }}</label>
            <input class="text" type="text" id="q" name="q" value="{{ search }}" placeholder="{{ "Key"|t('pragmatic-web-toolkit') }}">
          </div>
          <div>
            <label for="hide-empty-values">{{ "Hide empty values"|t('pragmatic-web-toolkit') }}</label>
            <div class="pwt-hide-empty-wrap" id="hide-empty-values-field">
              {{ forms.lightswitch({
                id: 'hide-empty-values',
                name: 'hideEmptyValuesUi',
                on: false,
              }) }}
            </div>
          </div>
          <div class="pwt-toolbar-separator" aria-hidden="true"></div>
          <input type="hidden" name="perPage" value="{{ perPage }}">
          <div>
            <label>&nbsp;</label>
            <button class="btn pwt-translate-selected-btn" type="button" id="translate-selected-rows" disabled>
              <svg width="14" height="14" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 2a10 10 0 1 0 7.07 17.07A10 10 0 0 0 12 2zm6.92 9h-3.01a15.7 15.7 0 0 0-1.17-5.04A8.03 8.03 0 0 1 18.92 11zM12 4c.8 1.2 1.72 3.53 1.92 7h-3.84C10.28 7.53 11.2 5.2 12 4zM4.08 13h3.01c.12 1.8.51 3.56 1.17 5.04A8.03 8.03 0 0 1 4.08 13zm3.01-2H4.08a8.03 8.03 0 0 1 4.18-5.04A15.7 15.7 0 0 0 7.09 11zm4.91 9c-.8-1.2-1.72-3.53-1.92-7h3.84c-.2 3.47-1.12 5.8-1.92 7zm2.74-1.96A15.7 15.7 0 0 0 15.91 13h3.01a8.03 8.03 0 0 1-4.18 5.04z" fill="currentColor"></path>
              </svg>
              <span>{{ "Translate selected"|t('pragmatic-web-toolkit') }}</span>
            </button>
          </div>
        </form>
      </div>
      <div class="flex align-center">
        <div class="buttons" style="margin-block:0;">
          <form method="post" accept-charset="UTF-8" style="display:inline-block;">
            {{ csrfInput() }}
            {{ actionInput('pragmatic-web-toolkit/translations/scan-templates') }}
            {{ redirectInput('pragmatic-toolkit/translations/static', { group: group, q: search, perPage: perPage, page: page, site: selectedSite.handle }) }}
            <input type="hidden" name="group" value="{{ group }}">
            <button class="btn flex" type="submit">
              <span class="icon" data-icon="refresh" aria-hidden="true"></span>
              <span>{{ 'Scan templates for translations'|t('pragmatic-web-toolkit') }}</span>
            </button>
          </form>
          <button class="btn submit" type="submit" form="translations-form" id="save-translations">{{ "Save"|t('pragmatic-web-toolkit') }}</button>
        </div>
      </div>
  </div>

  

  <form method="post" accept-charset="UTF-8" id="translations-form">
    {{ csrfInput() }}
    {{ actionInput('pragmatic-web-toolkit/translations/save') }}
    {{ redirectInput('pragmatic-toolkit/translations/static', { group: group, q: search, perPage: perPage, page: page, site: selectedSite.handle }) }}
    <input type="hidden" name="returnGroup" id="return-group" value="{{ group }}">
    <input type="hidden" name="returnQ" id="return-q" value="{{ search }}">
    <input type="hidden" name="returnPerPage" id="return-per-page" value="{{ perPage }}">
    <input type="hidden" name="returnPage" id="return-page" value="{{ page }}">
    <input type="hidden" name="returnSite" id="return-site" value="{{ selectedSite.handle }}">

    <style>
      #translations-table .pwt-current-language-col {
        background: #f3f9ff;
      }
      #translations-table .pwt-current-language-header {
        background: #e5f2ff;
        box-shadow: inset 0 -1px 0 #c8def5;
      }
      #translations-table .pwt-current-language-cell-inner {
        display: flex;
        align-items: center;
        gap: 8px;
      }
      #translations-table .pwt-current-language-action {
        padding: 0 8px;
        min-width: 34px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
      }
      #translations-table .pwt-current-language-action svg {
        display: block;
      }
    </style>

    <table class="data fullwidth" id="translations-table" style="margin-top: 16px;">
      <thead>
        <tr>
          <th style="width: 40px;">
            <label class="checkbox" style="margin: 0;">
              <input type="checkbox" id="select-all-rows" title="{{ 'Select all'|t('pragmatic-web-toolkit') }}">
              <span></span>
            </label>
          </th>
          <th>{{ "Key"|t('pragmatic-web-toolkit') }}</th>
          {% for language in orderedLanguages %}
            {% set isCurrentLanguage = language == currentLanguage %}
            <th class="{{ isCurrentLanguage ? 'pwt-current-language-col pwt-current-language-header' : '' }}">
              {{ language }}{{ isCurrentLanguage ? ' (' ~ "Current"|t('pragmatic-web-toolkit') ~ ')' : '' }}
            </th>
          {% endfor %}
          <th>{{ "Delete"|t('pragmatic-web-toolkit') }}</th>
        </tr>
      </thead>
      <tbody>
        {% for translation in translations %}
          <tr>
            <td>
              <label class="checkbox" style="margin: 0;">
                <input type="checkbox" class="js-delete-row-checkbox" name="deleteRows[]" value="{{ loop.index0 }}">
                <span></span>
              </label>
            </td>
            <td>
              <input type="hidden" name="translations[{{ loop.index0 }}][id]" value="{{ translation.id }}">
              <input class="text fullwidth" name="translations[{{ loop.index0 }}][key]" value="{{ translation.key }}" required>
              <input type="hidden" name="translations[{{ loop.index0 }}][group]" value="{{ translation.group }}">
            </td>
            {% for language in orderedLanguages %}
              {% set isCurrentLanguage = language == currentLanguage %}
              <td class="{{ isCurrentLanguage ? 'pwt-current-language-col' : '' }}">
                {% set value = '' %}
                {% for site in sites %}
                  {% if site.language == language and translation.values[site.id] is defined %}
                    {% set value = translation.values[site.id] %}
                  {% endif %}
                {% endfor %}
                {% if isCurrentLanguage %}
                  <div class="pwt-current-language-cell-inner">
                    <input class="text fullwidth js-static-input" data-language="{{ language }}" name="translations[{{ loop.parent.loop.index0 }}][values][{{ language }}]" value="{{ value }}">
                    <button class="btn small pwt-current-language-action js-current-language-translate" type="button" title="{{ "Translate this row from current language"|t('pragmatic-web-toolkit') }}" aria-label="{{ "Translate this row from current language"|t('pragmatic-web-toolkit') }}">
                      <svg width="14" height="14" viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M12 2a10 10 0 1 0 7.07 17.07A10 10 0 0 0 12 2zm6.92 9h-3.01a15.7 15.7 0 0 0-1.17-5.04A8.03 8.03 0 0 1 18.92 11zM12 4c.8 1.2 1.72 3.53 1.92 7h-3.84C10.28 7.53 11.2 5.2 12 4zM4.08 13h3.01c.12 1.8.51 3.56 1.17 5.04A8.03 8.03 0 0 1 4.08 13zm3.01-2H4.08a8.03 8.03 0 0 1 4.18-5.04A15.7 15.7 0 0 0 7.09 11zm4.91 9c-.8-1.2-1.72-3.53-1.92-7h3.84c-.2 3.47-1.12 5.8-1.92 7zm2.74-1.96A15.7 15.7 0 0 0 15.91 13h3.01a8.03 8.03 0 0 1-4.18 5.04z" fill="currentColor"></path>
                        <path d="M14 18h7m0 0-3-3m3 3-3 3" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"></path>
                      </svg>
                    </button>
                  </div>
                {% else %}
                  <input class="text fullwidth js-static-input" data-language="{{ language }}" name="translations[{{ loop.parent.loop.index0 }}][values][{{ language }}]" value="{{ value }}">
                {% endif %}
              </td>
            {% endfor %}
            <td>
              <button
                class="btn small danger"
                type="submit"
                name="deleteRow"
                value="{{ loop.index0 }}"
                title="{{ 'Delete'|t('pragmatic-web-toolkit') }}"
              >
                {{ 'Delete'|t('pragmatic-web-toolkit') }}
              </button>
            </td>
          </tr>
        {% endfor %}

        {% set newIndex = translations|length %}
        {% set selectedGroupForNewRow = group ?: 'site' %}
        <tr data-new-row="1">
          <td></td>
          <td>
            <input class="text fullwidth" name="translations[{{ newIndex }}][key]" placeholder="{{ "New key"|t('pragmatic-web-toolkit') }}">
            <input type="hidden" name="translations[{{ newIndex }}][group]" value="{{ selectedGroupForNewRow }}">
          </td>
          {% for language in orderedLanguages %}
            {% set isCurrentLanguage = language == currentLanguage %}
            <td class="{{ isCurrentLanguage ? 'pwt-current-language-col' : '' }}">
              {% if isCurrentLanguage %}
                <div class="pwt-current-language-cell-inner">
                  <input class="text fullwidth js-static-input" data-language="{{ language }}" name="translations[{{ newIndex }}][values][{{ language }}]" placeholder="">
                  <button class="btn small pwt-current-language-action js-current-language-translate" type="button" title="{{ "Translate this row from current language"|t('pragmatic-web-toolkit') }}" aria-label="{{ "Translate this row from current language"|t('pragmatic-web-toolkit') }}">
                    <svg width="14" height="14" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M12 2a10 10 0 1 0 7.07 17.07A10 10 0 0 0 12 2zm6.92 9h-3.01a15.7 15.7 0 0 0-1.17-5.04A8.03 8.03 0 0 1 18.92 11zM12 4c.8 1.2 1.72 3.53 1.92 7h-3.84C10.28 7.53 11.2 5.2 12 4zM4.08 13h3.01c.12 1.8.51 3.56 1.17 5.04A8.03 8.03 0 0 1 4.08 13zm3.01-2H4.08a8.03 8.03 0 0 1 4.18-5.04A15.7 15.7 0 0 0 7.09 11zm4.91 9c-.8-1.2-1.72-3.53-1.92-7h3.84c-.2 3.47-1.12 5.8-1.92 7zm2.74-1.96A15.7 15.7 0 0 0 15.91 13h3.01a8.03 8.03 0 0 1-4.18 5.04z" fill="currentColor"></path>
                      <path d="M14 18h7m0 0-3-3m3 3-3 3" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"></path>
                    </svg>
                  </button>
                </div>
              {% else %}
                <input class="text fullwidth js-static-input" data-language="{{ language }}" name="translations[{{ newIndex }}][values][{{ language }}]" placeholder="">
              {% endif %}
            </td>
          {% endfor %}
          <td></td>
        </tr>
      </tbody>
    </table>

  </form>

  <div class="flex flex-row justify-between align-center" style="margin-top: 16px; justify-content: space-between; width:100%;">
    <div class="flex align-center">
      <div class="buttons" style="margin-block:0;">
        <button class="btn" id="add-row" type="button">{{ "Add Row"|t('pragmatic-web-toolkit') }}</button>
        <button class="btn danger" id="delete-selected-rows" type="submit" name="bulkDelete" value="1" form="translations-form">{{ "Delete selected"|t('pragmatic-web-toolkit') }}</button>
        <button class="btn" id="remove-unused-static" type="button">{{ "Remove unused"|t('pragmatic-web-toolkit') }}</button>
      </div>
    </div>
    <div class="flex align-center">
      <div><span id="pagination-total-count">{{ total }}</span> {{ "total"|t('pragmatic-web-toolkit') }}</div>
      <div class="flex" style="gap: 8px; align-items: center;">
        <label for="perPage" class="light" style="margin: 0;">{{ "Per page"|t('pragmatic-web-toolkit') }}</label>
        <div class="select">
          <select id="perPage">
            {% for option in [50, 100, 250] %}
              <option value="{{ option }}" {{ option == perPage ? 'selected' : '' }}>{{ option }}</option>
            {% endfor %}
          </select>
        </div>
        {% set prevPage = page > 1 ? page - 1 : 1 %}
        {% set nextPage = page < totalPages ? page + 1 : totalPages %}
        <a id="pagination-prev" class="btn {{ page == 1 ? 'disabled' : '' }}" href="{{ url('pragmatic-toolkit/translations/static', { group: group, q: search, perPage: perPage, page: prevPage, site: selectedSite.handle }) }}">{{ "Prev"|t('pragmatic-web-toolkit') }}</a>
        <div id="pagination-page-label">{{ "Page"|t('pragmatic-web-toolkit') }} {{ page }} / {{ totalPages }}</div>
        <a id="pagination-next" class="btn {{ page == totalPages ? 'disabled' : '' }}" href="{{ url('pragmatic-toolkit/translations/static', { group: group, q: search, perPage: perPage, page: nextPage, site: selectedSite.handle }) }}">{{ "Next"|t('pragmatic-web-toolkit') }}</a>
      </div>
    </div>
  </div>

  <form method="post" accept-charset="UTF-8" id="remove-unused-static-form" style="display:none;">
    {{ csrfInput() }}
    {{ actionInput('pragmatic-web-toolkit/translations/delete-unused-static') }}
    {{ redirectInput('pragmatic-toolkit/translations/static', { group: group, q: search, perPage: perPage, page: page, site: selectedSite.handle }) }}
    <input type="hidden" name="group" id="remove-unused-group" value="{{ group }}">
  </form>

  <hr style="margin: 24px 0;">
  <h2 id="translations-export-import" style="margin: 0 0 12px;">{{ "Export and import"|t('pragmatic-web-toolkit') }}</h2>
  <p class="light" style="margin: 0 0 12px;">{{ "Choose whether to transfer translations using downloadable/uploadable files or directly sync with your project's translations folder."|t('pragmatic-web-toolkit') }}</p>

  <div style="border: 1px solid #e5e7eb; border-radius: 6px; padding: 12px; margin-bottom: 12px;">
    <h3 style="margin: 0 0 6px;">{{ "Download / upload files"|t('pragmatic-web-toolkit') }}</h3>
    <p class="light" style="margin: 0 0 10px;">{{ "Use this when you need to download translation files or upload files manually."|t('pragmatic-web-toolkit') }}</p>
    <div class="flex flex-row align-center" style="gap: 16px; justify-content: space-between; width:100%;">
      <div class="flex align-center">
        <div class="btngroup">
          <a class="btn" href="{{ url('pragmatic-toolkit/translations/export', { format: 'csv', site: selectedSite.handle }) }}">{{ "Export CSV"|t('pragmatic-web-toolkit') }}</a>
          <a class="btn" href="{{ url('pragmatic-toolkit/translations/export', { format: 'json', site: selectedSite.handle }) }}">{{ "Export JSON"|t('pragmatic-web-toolkit') }}</a>
          <a class="btn" href="{{ url('pragmatic-toolkit/translations/export', { format: 'php', site: selectedSite.handle }) }}">{{ "Export PHP"|t('pragmatic-web-toolkit') }}</a>
        </div>
      </div>
      <div class="flex align-center">
        <form method="post" enctype="multipart/form-data" accept-charset="UTF-8">
          {{ csrfInput() }}
          {{ actionInput('pragmatic-web-toolkit/translations/import') }}
          {{ redirectInput('pragmatic-toolkit/translations/static', { group: group, q: search, perPage: perPage, page: page, site: selectedSite.handle }) }}
          <div class="flex" style="gap: 8px; align-items: flex-end;">
            <div>
              <label for="format">{{ "Format"|t('pragmatic-web-toolkit') }}</label>
              <div class="select">
                <select id="format" name="format">
                  <option value="csv">CSV</option>
                  <option value="json">JSON</option>
                  <option value="php">PHP (ZIP)</option>
                </select>
              </div>
            </div>
            <input type="file" name="file" required>
            <button class="btn" type="submit">{{ "Import"|t('pragmatic-web-toolkit') }}</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div style="border: 1px solid #e5e7eb; border-radius: 6px; padding: 12px;">
    <h3 style="margin: 0 0 6px;">{{ "Project folder sync"|t('pragmatic-web-toolkit') }}</h3>
    <p class="light" style="margin: 0 0 10px;">{{ "Sync directly with your project's translations folder (translations/<language>/<group>.php) without downloading or uploading files."|t('pragmatic-web-toolkit') }}</p>
    <div class="buttons" style="margin: 0;">
      <form method="post" accept-charset="UTF-8" style="display:inline-block;" onsubmit="return confirm('{{ 'This will overwrite project PHP translation files from database values. Continue?'|t('pragmatic-web-toolkit')|e('js') }}');">
        {{ csrfInput() }}
        {{ actionInput('pragmatic-web-toolkit/translations/export-project-php') }}
        {{ redirectInput('pragmatic-toolkit/translations/static', { group: group, q: search, perPage: perPage, page: page, site: selectedSite.handle }) }}
        <button class="btn" type="submit">{{ "DB -> PHP (project folder)"|t('pragmatic-web-toolkit') }}</button>
      </form>
      <form method="post" accept-charset="UTF-8" style="display:inline-block;" onsubmit="return confirm('{{ 'This will import project PHP translation files into database values. Continue?'|t('pragmatic-web-toolkit')|e('js') }}');">
        {{ csrfInput() }}
        {{ actionInput('pragmatic-web-toolkit/translations/import-project-php') }}
        {{ redirectInput('pragmatic-toolkit/translations/static', { group: group, q: search, perPage: perPage, page: page, site: selectedSite.handle }) }}
        <button class="btn" type="submit">{{ "PHP -> DB (project folder)"|t('pragmatic-web-toolkit') }}</button>
      </form>
    </div>
  </div>

  

  <hr style="margin: 24px 0;">
  <h2 id="translations-manage-groups" style="margin: 0 0 12px;">{{ "Groups"|t('pragmatic-web-toolkit') }}</h2>

    <form method="post" accept-charset="UTF-8" style="margin-top: 12px;" id="groups-form">
    {{ csrfInput() }}
    {{ actionInput('pragmatic-web-toolkit/translations/save-groups') }}
    {{ redirectInput('pragmatic-toolkit/translations/static', { group: group, q: search, perPage: perPage, site: selectedSite.handle }) }}

    <table class="data fullwidth">
      <thead>
        <tr>
          <th style="width: 110px;">{{ "Order"|t('pragmatic-web-toolkit') }}</th>
          <th style="width: 90px;">{{ "Active"|t('pragmatic-web-toolkit') }}</th>
          <th>{{ "Group"|t('pragmatic-web-toolkit') }}</th>
        </tr>
      </thead>
      <tbody>
        {% for groupRow in groups %}
          {% set groupName = groupRow.name %}
          <tr>
            <td>
              {% if groupName == 'site' %}
                <input type="hidden" name="groups[{{ loop.index0 }}][sortOrder]" value="0" class="js-group-sort-order">
                <span class="light">-</span>
              {% else %}
                <div class="btngroup">
                  <button type="button" class="btn small js-group-move-up" title="{{ 'Move up'|t('pragmatic-web-toolkit') }}">↑</button>
                  <button type="button" class="btn small js-group-move-down" title="{{ 'Move down'|t('pragmatic-web-toolkit') }}">↓</button>
                </div>
                <input type="hidden" name="groups[{{ loop.index0 }}][sortOrder]" value="{{ loop.index }}" class="js-group-sort-order">
              {% endif %}
            </td>
            <td>
              {% if groupName == 'site' %}
                <label class="checkbox" style="margin: 0; opacity: .7;">
                  <input type="checkbox" name="groups[{{ loop.index0 }}][isActive]" value="1" checked disabled>
                  <span></span>
                </label>
                <input type="hidden" name="groups[{{ loop.index0 }}][isActive]" value="1">
              {% else %}
                <input type="hidden" name="groups[{{ loop.index0 }}][isActive]" value="0">
                <label class="checkbox" style="margin: 0;">
                  <input type="checkbox" name="groups[{{ loop.index0 }}][isActive]" value="1" {{ groupRow.isActive ? 'checked' : '' }}>
                  <span></span>
                </label>
              {% endif %}
            </td>
            <td>
              <input type="hidden" name="groups[{{ loop.index0 }}][original]" value="{{ groupName }}">
              {% if groupName == 'site' %}
                <input class="text fullwidth" value="{{ groupName }}" disabled>
              {% else %}
                <input class="text fullwidth" name="groups[{{ loop.index0 }}][name]" value="{{ groupName }}">
              {% endif %}
            </td>
          </tr>
        {% endfor %}

        {% set newGroupIndex = groups|length %}
        <tr data-new-group="1">
          <td>
            <div class="btngroup">
              <button type="button" class="btn small js-group-move-up" title="{{ 'Move up'|t('pragmatic-web-toolkit') }}">↑</button>
              <button type="button" class="btn small js-group-move-down" title="{{ 'Move down'|t('pragmatic-web-toolkit') }}">↓</button>
            </div>
            <input type="hidden" name="groups[{{ newGroupIndex }}][sortOrder]" value="" class="js-group-sort-order">
          </td>
          <td></td>
          <td>
            <input type="hidden" name="groups[{{ newGroupIndex }}][original]" value="">
            <input type="hidden" name="groups[{{ newGroupIndex }}][isActive]" value="1">
            <input class="text fullwidth" name="groups[{{ newGroupIndex }}][name]" placeholder="{{ "New group"|t('pragmatic-web-toolkit') }}">
          </td>
        </tr>
      </tbody>
    </table>

    <div class="buttons" style="margin-top: 12px;">
      <button class="btn" id="add-group-row" type="button">{{ "Add Group"|t('pragmatic-web-toolkit') }}</button>
      <button class="btn submit" type="submit" id="save-groups">{{ "Save Groups"|t('pragmatic-web-toolkit') }}</button>
    </div>
  </form>

  {% js %}
    (function() {
      const filterForm = document.getElementById('entries-filter');
      const searchInput = document.getElementById('q');
      const perPageSelect = document.getElementById('perPage');
      const hideEmptyValuesField = document.getElementById('hide-empty-values-field');
      const hideEmptyValuesToggle = hideEmptyValuesField
        ? (hideEmptyValuesField.querySelector('#hide-empty-values')
          || hideEmptyValuesField.querySelector('input[type="checkbox"][name="hideEmptyValuesUi"]')
          || hideEmptyValuesField.querySelector('.lightswitch input[type="checkbox"]')
          || hideEmptyValuesField.querySelector('input[type="checkbox"]'))
        : null;
      const hideEmptyValuesSwitchWrapper = hideEmptyValuesField ? hideEmptyValuesField.querySelector('.lightswitch') : null;
      const paginationTotalCount = document.getElementById('pagination-total-count');
      const paginationPageLabel = document.getElementById('pagination-page-label');
      const paginationPrev = document.getElementById('pagination-prev');
      const paginationNext = document.getElementById('pagination-next');
      const hideEmptyStorageKey = 'pwt.translations.static.hideEmpty.{{ selectedSite.handle|e('js') }}.{{ (group ?: "__all__")|e('js') }}';
      const baseTotalCount = {{ total }};
      const basePage = {{ page }};
      const baseTotalPages = {{ totalPages }};
      const basePrevDisabled = {{ (page == 1)|json_encode|raw }};
      const baseNextDisabled = {{ (page == totalPages)|json_encode|raw }};
      const pageLabelText = '{{ "Page"|t('pragmatic-web-toolkit')|e('js') }}';

      if (filterForm) {
        let searchTimer = null;
        if (searchInput) {
          searchInput.addEventListener('input', function() {
            if (searchTimer) {
              clearTimeout(searchTimer);
            }
            searchTimer = setTimeout(function() {
              filterForm.submit();
            }, 300);
          });
        }
        if (perPageSelect) {
          perPageSelect.addEventListener('change', function() {
            const perPageInput = filterForm.querySelector('input[name="perPage"]');
            if (perPageInput) {
              perPageInput.value = perPageSelect.value;
            }
            const pageInput = filterForm.querySelector('input[name=\"page\"]');
            if (pageInput) pageInput.value = '1';
            filterForm.submit();
          });
        }
      }

      const translationsTable = document.getElementById('translations-table');
      const translationsForm = document.getElementById('translations-form');
      const addTranslationButton = document.getElementById('add-row');
      const selectAllRowsCheckbox = document.getElementById('select-all-rows');
      const deleteSelectedRowsButton = document.getElementById('delete-selected-rows');
      const removeUnusedStaticButton = document.getElementById('remove-unused-static');
      const removeUnusedForm = document.getElementById('remove-unused-static-form');
      const removeUnusedGroupInput = document.getElementById('remove-unused-group');
      const saveTranslationsButton = document.getElementById('save-translations');
      const returnGroupInput = document.getElementById('return-group');
      const returnQInput = document.getElementById('return-q');
      const returnPerPageInput = document.getElementById('return-per-page');
      const returnPageInput = document.getElementById('return-page');
      const returnSiteInput = document.getElementById('return-site');
      const translateSelectedRowsButton = document.getElementById('translate-selected-rows');
      const autotranslateAvailable = {{ autotranslateAvailable|json_encode|raw }};
      const autotranslateDisabledReason = {{ autotranslateDisabledReason|json_encode|raw }};
      const autotranslateTextUrl = {{ autotranslateTextUrl|json_encode|raw }};
      const currentLanguage = {{ currentLanguage|json_encode|raw }};
      const orderedLanguages = {{ orderedLanguages|json_encode|raw }};
      function readFilterGroup() {
        const hiddenGroupInput = filterForm ? filterForm.querySelector('input[name="group"]') : null;
        return hiddenGroupInput ? hiddenGroupInput.value : '';
      }
      function syncReturnParams() {
        if (returnGroupInput) returnGroupInput.value = readFilterGroup();
        if (returnQInput) returnQInput.value = searchInput ? searchInput.value : '{{ search|e('js') }}';
        if (returnPerPageInput) returnPerPageInput.value = perPageSelect ? perPageSelect.value : '{{ perPage }}';
        if (returnPageInput && !returnPageInput.value) returnPageInput.value = '{{ page }}';
        if (returnSiteInput && !returnSiteInput.value) returnSiteInput.value = '{{ selectedSite.handle|e('js') }}';
      }
      function syncRemoveUnusedParams() {
        if (removeUnusedGroupInput) {
          removeUnusedGroupInput.value = readFilterGroup();
        }
      }
      function getDeleteCheckboxes() {
        return translationsTable ? Array.from(translationsTable.querySelectorAll('.js-delete-row-checkbox')) : [];
      }
      function syncSelectAllState() {
        const checkboxes = getDeleteCheckboxes();
        const checkedCount = checkboxes.filter(function(cb) { return cb.checked; }).length;
        if (selectAllRowsCheckbox) {
          selectAllRowsCheckbox.checked = checkboxes.length > 0 && checkedCount === checkboxes.length;
          selectAllRowsCheckbox.indeterminate = checkedCount > 0 && checkedCount < checkboxes.length;
        }
        if (translateSelectedRowsButton) {
          translateSelectedRowsButton.disabled = checkedCount === 0;
        }
      }
      function setPagerLinkDisabled(link, disabled) {
        if (!link) return;
        if (disabled) {
          link.classList.add('disabled');
          link.setAttribute('aria-disabled', 'true');
          link.setAttribute('tabindex', '-1');
        } else {
          link.classList.remove('disabled');
          link.removeAttribute('aria-disabled');
          link.removeAttribute('tabindex');
        }
      }
      function refreshPaginationForFilter(visibleCount, hideEmpty) {
        if (paginationTotalCount) {
          paginationTotalCount.textContent = String(hideEmpty ? visibleCount : baseTotalCount);
        }
        if (paginationPageLabel) {
          paginationPageLabel.textContent = hideEmpty
            ? (pageLabelText + ' 1 / 1')
            : (pageLabelText + ' ' + basePage + ' / ' + baseTotalPages);
        }
        if (hideEmpty) {
          setPagerLinkDisabled(paginationPrev, true);
          setPagerLinkDisabled(paginationNext, true);
        } else {
          setPagerLinkDisabled(paginationPrev, basePrevDisabled);
          setPagerLinkDisabled(paginationNext, baseNextDisabled);
        }
      }
      function applyHideEmptyFilter() {
        if (!translationsTable || !hideEmptyValuesToggle) return;
        const hideEmpty = !!hideEmptyValuesToggle.checked;
        const rows = Array.from(translationsTable.querySelectorAll('tbody tr'));
        let visibleCount = 0;
        rows.forEach(function(row) {
          if (row.hasAttribute('data-new-row')) {
            row.style.display = '';
            return;
          }
          if (!hideEmpty) {
            row.style.display = '';
            visibleCount++;
            return;
          }
          const valueInputs = Array.from(row.querySelectorAll('.js-static-input'));
          const hasEmptyValue = valueInputs.some(function(input) {
            return String(input.value || '').trim() === '';
          });
          row.style.display = hasEmptyValue ? 'none' : '';
          if (!hasEmptyValue) {
            visibleCount++;
          }
        });
        refreshPaginationForFilter(visibleCount, hideEmpty);
      }
      if (translationsTable && addTranslationButton) {
        addTranslationButton.addEventListener('click', function() {
          const body = translationsTable.querySelector('tbody');
          const template = body.querySelector('tr[data-new-row="1"]');
          if (!template) return;

          const newIndex = body.querySelectorAll('tr').length;
          const clone = template.cloneNode(true);
          clone.removeAttribute('data-new-row');

          clone.querySelectorAll('input').forEach(function(input) {
            const name = input.getAttribute('name');
            if (name) {
              input.setAttribute('name', name.replace(/translations\[\d+\]/, 'translations[' + newIndex + ']'));
            }
            input.value = '';
          });

          body.appendChild(clone);
          syncSelectAllState();
          applyHideEmptyFilter();
        });
      }
      if (translationsTable && selectAllRowsCheckbox) {
        getDeleteCheckboxes().forEach(function(cb) { cb.checked = false; });
        selectAllRowsCheckbox.addEventListener('change', function() {
          getDeleteCheckboxes().forEach(function(cb) {
            cb.checked = selectAllRowsCheckbox.checked;
          });
          syncSelectAllState();
        });
        translationsTable.addEventListener('change', function(event) {
          if (event.target && event.target.classList.contains('js-delete-row-checkbox')) {
            syncSelectAllState();
          }
        });
        syncSelectAllState();
      }
      if (translationsTable && hideEmptyValuesToggle) {
        try {
          hideEmptyValuesToggle.checked = localStorage.getItem(hideEmptyStorageKey) === '1';
        } catch (e) {
          hideEmptyValuesToggle.checked = false;
        }
        function persistAndApplyHideEmpty() {
          try {
            localStorage.setItem(hideEmptyStorageKey, hideEmptyValuesToggle.checked ? '1' : '0');
          } catch (e) {
          }
          applyHideEmptyFilter();
        }
        hideEmptyValuesToggle.addEventListener('change', persistAndApplyHideEmpty);
        hideEmptyValuesToggle.addEventListener('input', persistAndApplyHideEmpty);
        if (hideEmptyValuesSwitchWrapper) {
          hideEmptyValuesSwitchWrapper.addEventListener('click', function() {
            setTimeout(persistAndApplyHideEmpty, 0);
          });
        }
        translationsTable.addEventListener('input', function(event) {
          if (event.target && event.target.classList.contains('js-static-input')) {
            applyHideEmptyFilter();
          }
        });
        applyHideEmptyFilter();
      }
      if (paginationPrev) {
        paginationPrev.addEventListener('click', function(event) {
          if (paginationPrev.classList.contains('disabled')) {
            event.preventDefault();
          }
        });
      }
      if (paginationNext) {
        paginationNext.addEventListener('click', function(event) {
          if (paginationNext.classList.contains('disabled')) {
            event.preventDefault();
          }
        });
      }
      if (translationsForm && deleteSelectedRowsButton) {
        translationsForm.addEventListener('submit', function(event) {
          const submitter = event.submitter;
          syncReturnParams();
          if (submitter && submitter.id === 'delete-selected-rows') {
            const selectedCount = getDeleteCheckboxes().filter(function(cb) { return cb.checked; }).length;
            if (selectedCount === 0) {
              event.preventDefault();
              return;
            }
            if (!confirm('{{ "Delete selected rows?"|t('pragmatic-web-toolkit')|e('js') }}')) {
              event.preventDefault();
            }
          }
        });
      }
      if (translationsForm && saveTranslationsButton) {
        document.addEventListener('keydown', function(event) {
          const key = (event.key || '').toLowerCase();
          if (key !== 's') return;
          if (!(event.metaKey || event.ctrlKey) || event.altKey) return;
          event.preventDefault();
          syncReturnParams();
          if (typeof translationsForm.requestSubmit === 'function') {
            translationsForm.requestSubmit(saveTranslationsButton);
          } else {
            saveTranslationsButton.click();
          }
        });
      }
      function getRowInput(row, language) {
        if (!row) return null;
        return row.querySelector('.js-static-input[data-language="' + language + '"]');
      }
      async function translateRows(rows, targetLanguages, overwriteNonEmpty) {
        const effectiveRows = rows.filter(function(row) {
          const sourceInput = getRowInput(row, currentLanguage);
          return sourceInput && String(sourceInput.value || '').trim() !== '';
        });

        if (effectiveRows.length === 0) {
          Craft.cp.displayError('{{ "Current language value is empty."|t('pragmatic-web-toolkit')|e('js') }}');
          return;
        }

        const sourceTexts = effectiveRows.map(function(row) {
          const sourceInput = getRowInput(row, currentLanguage);
          return sourceInput ? String(sourceInput.value || '') : '';
        });

        await Promise.all(targetLanguages.map(async function(targetLanguage) {
          const response = await Craft.sendActionRequest('POST', autotranslateTextUrl, {
            data: {
              texts: sourceTexts,
              sourceLang: currentLanguage,
              targetLang: targetLanguage,
              mimeType: 'text/plain'
            }
          });

          if (!response.data) {
            throw new Error('{{ "Translation failed."|t('pragmatic-web-toolkit')|e('js') }}');
          }
          if (!response.data.success) {
            throw new Error(response.data.error || '{{ "Translation failed."|t('pragmatic-web-toolkit')|e('js') }}');
          }
          if (!Array.isArray(response.data.translations)) {
            throw new Error('{{ "Translation failed."|t('pragmatic-web-toolkit')|e('js') }}');
          }

          response.data.translations.forEach(function(translated, index) {
            const row = effectiveRows[index];
            if (!row) return;
            const targetInput = getRowInput(row, targetLanguage);
            if (!targetInput) return;
            if (!overwriteNonEmpty && String(targetInput.value || '').trim() !== '') return;
            targetInput.value = translated || '';
          });
        }));
      }
      function showStaticAutotranslateModal(rows, options) {
        const mode = options && options.mode ? options.mode : 'single';
        if (!autotranslateAvailable) {
          Craft.cp.displayError(autotranslateDisabledReason || '{{ "Auto-translation is not available."|t('pragmatic-web-toolkit')|e('js') }}');
          return;
        }

        if (!currentLanguage) {
          Craft.cp.displayError('{{ "Current site language is not available."|t('pragmatic-web-toolkit')|e('js') }}');
          return;
        }

        const targetLanguages = orderedLanguages.filter(function(language) {
          return language !== currentLanguage;
        });
        if (!targetLanguages.length) {
          Craft.cp.displayError('{{ "No target languages available."|t('pragmatic-web-toolkit')|e('js') }}');
          return;
        }

        const modalEl = document.createElement('div');
        modalEl.className = 'modal fitted';
        modalEl.innerHTML =
          '<div class="body">' +
            '<h2>{{ "Translate from current language"|t('pragmatic-web-toolkit')|e('js') }}</h2>' +
            '<p class="light">{{ "Translate this row using the current language value as source, and choose which target languages to update."|t('pragmatic-web-toolkit')|e('js') }}</p>' +
            '<div class="field" style="margin-top: 14px;">' +
              '<label>{{ "Target languages"|t('pragmatic-web-toolkit')|e('js') }}</label>' +
              '<div id="static-at-targets" style="max-height: 180px; overflow: auto; border: 1px solid #e5e7eb; border-radius: 4px; padding: 8px;">' +
                targetLanguages.map(function(language) {
                  return '<label class="checkbox" style="display: block; margin: 0 0 6px;">' +
                    '<input type="checkbox" class="js-static-at-target" value="' + language + '">' +
                    '<span></span> ' + language +
                  '</label>';
                }).join('') +
              '</div>' +
            '</div>' +
            (mode === 'multi'
              ? '<div class="field" style="margin-top: 12px;">' +
                  '<label class="checkbox">' +
                    '<input type="checkbox" id="static-at-overwrite-non-empty">' +
                    '<span></span> {{ "Overwrite non-empty values"|t('pragmatic-web-toolkit')|e('js') }}' +
                  '</label>' +
                '</div>'
              : ''
            ) +
            '<div class="buttons right" style="margin-top: 14px;">' +
              '<button type="button" class="btn" id="static-at-cancel">{{ "Cancel"|t('pragmatic-web-toolkit')|e('js') }}</button>' +
              '<button type="button" class="btn submit" id="static-at-confirm">{{ "Translate"|t('pragmatic-web-toolkit')|e('js') }}</button>' +
            '</div>' +
          '</div>';

        const modal = new Garnish.Modal(modalEl, {
          autoShow: true,
          closeOtherModals: true,
          onHide: function() { modal.destroy(); }
        });

        const cancelBtn = modalEl.querySelector('#static-at-cancel');
        const confirmBtn = modalEl.querySelector('#static-at-confirm');
        if (cancelBtn) {
          cancelBtn.addEventListener('click', function() {
            modal.hide();
          });
        }

        if (confirmBtn) {
          confirmBtn.addEventListener('click', function() {
            const selectedLanguages = Array.from(modalEl.querySelectorAll('.js-static-at-target:checked'))
              .map(function(checkbox) {
                return checkbox.value;
              })
              .filter(function(language) {
                return language && language !== currentLanguage;
              });

            if (!selectedLanguages.length) {
              Craft.cp.displayError('{{ "Select at least one target language."|t('pragmatic-web-toolkit')|e('js') }}');
              return;
            }

            confirmBtn.classList.add('loading');
            confirmBtn.disabled = true;
            const overwriteCheckbox = modalEl.querySelector('#static-at-overwrite-non-empty');
            const overwriteNonEmpty = !!(overwriteCheckbox && overwriteCheckbox.checked);
            translateRows(rows, selectedLanguages, overwriteNonEmpty)
              .then(function() {
                applyHideEmptyFilter();
                Craft.cp.displayNotice(mode === 'multi'
                  ? '{{ "Selected rows translated."|t('pragmatic-web-toolkit')|e('js') }}'
                  : '{{ "Row translated."|t('pragmatic-web-toolkit')|e('js') }}');
                modal.hide();
              })
              .catch(function(error) {
                const message = error && error.response && error.response.data && error.response.data.error
                  ? error.response.data.error
                  : (error && error.message ? error.message : '{{ "Translation failed."|t('pragmatic-web-toolkit')|e('js') }}');
                Craft.cp.displayError(message);
                confirmBtn.classList.remove('loading');
                confirmBtn.disabled = false;
              });
          });
        }
      }
      if (translationsTable && typeof Craft !== 'undefined') {
        translationsTable.addEventListener('click', function(event) {
          const button = event.target ? event.target.closest('.js-current-language-translate') : null;
          if (!button) return;
          const row = button.closest('tr');
          if (!row) return;
          showStaticAutotranslateModal([row], { mode: 'single' });
        });
      }
      if (translateSelectedRowsButton) {
        translateSelectedRowsButton.addEventListener('click', function() {
          const rows = getDeleteCheckboxes()
            .filter(function(cb) { return cb.checked; })
            .map(function(cb) { return cb.closest('tr'); })
            .filter(function(row) { return !!row; });

          if (!rows.length) return;
          showStaticAutotranslateModal(rows, { mode: rows.length > 1 ? 'multi' : 'single' });
        });
      }
      syncSelectAllState();
      if (removeUnusedStaticButton && removeUnusedForm && typeof Craft !== 'undefined') {
        removeUnusedStaticButton.addEventListener('click', async function() {
          syncRemoveUnusedParams();
          const selectedGroup = removeUnusedGroupInput ? removeUnusedGroupInput.value : '';
          removeUnusedStaticButton.disabled = true;
          try {
            const response = await Craft.sendActionRequest('POST', 'pragmatic-web-toolkit/translations/preview-unused-static', {
              data: {
                group: selectedGroup,
              },
            });
            const result = response && response.data && response.data.result ? response.data.result : null;
            if (!result) {
              alert('{{ "Unable to scan templates for unused entries."|t('pragmatic-web-toolkit')|e('js') }}');
              return;
            }

            const unusedCount = Number(result.unusedCount || 0);
            const totalEntriesInScope = Number(result.totalEntriesInScope || 0);
            const filesScanned = Number(result.filesScanned || 0);
            const sample = Array.isArray(result.unusedSample) ? result.unusedSample : [];
            const sampleLines = sample.slice(0, 10).map(function(item) {
              const itemGroup = item && item.group ? item.group : 'site';
              const itemKey = item && item.key ? item.key : '';
              return '- [' + itemGroup + '] ' + itemKey;
            });
            const scopeLabel = selectedGroup !== '' ? selectedGroup : '{{ "active groups"|t('pragmatic-web-toolkit')|e('js') }}';

            if (unusedCount === 0) {
              alert('{{ "No unused entries found for"|t('pragmatic-web-toolkit')|e('js') }} ' + scopeLabel + '.\n' +
                '{{ "Scanned files"|t('pragmatic-web-toolkit')|e('js') }}: ' + filesScanned + '\n' +
                '{{ "Entries checked"|t('pragmatic-web-toolkit')|e('js') }}: ' + totalEntriesInScope);
              return;
            }

            let message =
              '{{ "Template scan finished."|t('pragmatic-web-toolkit')|e('js') }}\n' +
              '{{ "Scope"|t('pragmatic-web-toolkit')|e('js') }}: ' + scopeLabel + '\n' +
              '{{ "Scanned files"|t('pragmatic-web-toolkit')|e('js') }}: ' + filesScanned + '\n' +
              '{{ "Entries checked"|t('pragmatic-web-toolkit')|e('js') }}: ' + totalEntriesInScope + '\n' +
              '{{ "Unused entries found"|t('pragmatic-web-toolkit')|e('js') }}: ' + unusedCount;
            if (sampleLines.length > 0) {
              message += '\n\n{{ "Sample"|t('pragmatic-web-toolkit')|e('js') }}:\n' + sampleLines.join('\n');
            }
            message += '\n\n{{ "Delete these unused entries?"|t('pragmatic-web-toolkit')|e('js') }}';

            if (confirm(message)) {
              syncRemoveUnusedParams();
              if (typeof removeUnusedForm.requestSubmit === 'function') {
                removeUnusedForm.requestSubmit();
              } else {
                removeUnusedForm.submit();
              }
            }
          } catch (error) {
            alert('{{ "Unable to scan templates for unused entries."|t('pragmatic-web-toolkit')|e('js') }}');
          } finally {
            removeUnusedStaticButton.disabled = false;
          }
        });
      }

      const addGroupButton = document.getElementById('add-group-row');
      const groupsForm = document.getElementById('groups-form');
      function groupRows() {
        const body = groupsForm ? groupsForm.querySelector('tbody') : null;
        if (!body) return [];
        return Array.from(body.querySelectorAll('tr:not([data-new-group="1"])'));
      }
      function nonSiteGroupRows() {
        return groupRows().filter(function(row) {
          const originalInput = row.querySelector('input[name*="[original]"]');
          const original = originalInput ? originalInput.value : '';
          return original !== 'site';
        });
      }
      function renumberGroupSortOrders() {
        let sortOrder = 1;
        groupRows().forEach(function(row) {
          const originalInput = row.querySelector('input[name*="[original]"]');
          const sortInput = row.querySelector('.js-group-sort-order');
          if (!sortInput) return;
          if (originalInput && originalInput.value === 'site') {
            sortInput.value = '0';
            return;
          }
          sortInput.value = String(sortOrder);
          sortOrder++;
        });
      }
      function moveGroupRow(row, direction) {
        if (!row || !groupsForm) return;
        const body = groupsForm.querySelector('tbody');
        if (!body) return;
        const movableRows = nonSiteGroupRows();
        const currentIndex = movableRows.indexOf(row);
        if (currentIndex === -1) return;
        const targetIndex = direction === 'up' ? currentIndex - 1 : currentIndex + 1;
        if (targetIndex < 0 || targetIndex >= movableRows.length) return;
        const targetRow = movableRows[targetIndex];
        if (direction === 'up') {
          body.insertBefore(row, targetRow);
        } else {
          body.insertBefore(targetRow, row);
        }
        renumberGroupSortOrders();
      }
      if (addGroupButton) {
        addGroupButton.addEventListener('click', function() {
          const form = addGroupButton.closest('form');
          const body = form ? form.querySelector('tbody') : null;
          const template = body ? body.querySelector('tr[data-new-group="1"]') : null;
          if (!template) return;

          const newIndex = body.querySelectorAll('tr').length;
          const clone = template.cloneNode(true);
          clone.removeAttribute('data-new-group');

          clone.querySelectorAll('input').forEach(function(input) {
            const name = input.getAttribute('name');
            if (name) {
              input.setAttribute('name', name.replace(/groups\[\d+\]/, 'groups[' + newIndex + ']'));
            }
            input.value = '';
          });
          const activeInput = clone.querySelector('input[name$=\"[isActive]\"]');
          if (activeInput) {
            activeInput.value = '1';
          }

          const templateRow = body.querySelector('tr[data-new-group="1"]');
          body.insertBefore(clone, templateRow);
          renumberGroupSortOrders();
        });
      }
      if (groupsForm) {
        groupsForm.addEventListener('click', function(event) {
          const upButton = event.target.closest('.js-group-move-up');
          if (upButton) {
            moveGroupRow(upButton.closest('tr'), 'up');
            return;
          }
          const downButton = event.target.closest('.js-group-move-down');
          if (downButton) {
            moveGroupRow(downButton.closest('tr'), 'down');
          }
        });
      }
      if (groupsForm) {
        renumberGroupSortOrders();
        groupsForm.addEventListener('submit', function(event) {
          renumberGroupSortOrders();
        });
      }
    })();
  {% endjs %}
