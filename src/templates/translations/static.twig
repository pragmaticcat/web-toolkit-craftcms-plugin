{% extends "pragmatic-web-toolkit/translations/_layout" %}

{% set title = "Static"|t('pragmatic-web-toolkit') %}

{% set selectedTab = 'static' %}

{% set crumbs = [
    { label: "Translations"|t('pragmatic-web-toolkit'), url: url('pragmatic-toolkit/translations', { site: selectedSite.handle }) },
    { label: "Static"|t('pragmatic-web-toolkit'), url: url('pragmatic-toolkit/translations/static', { site: selectedSite.handle }) },
] %}

{% block sidebar %}
  <nav aria-label="{{ "Groups"|t('pragmatic-web-toolkit') }}">
    <ul class="nav">
      <li>
        <a class="{{ group == '' ? 'sel' : '' }}" href="{{ url('pragmatic-toolkit/translations/static', { site: selectedSite.handle, q: search, perPage: perPage }) }}">
          {{ "View all entries"|t('pragmatic-web-toolkit') }}
        </a>
      </li>
      {% if groups|length %}
        <li class="heading"><span>{{ "Groups"|t('pragmatic-web-toolkit') }}</span></li>
        {% for groupName in groups %}
          <li>
            <a class="{{ groupName == group ? 'sel' : '' }}" href="{{ url('pragmatic-toolkit/translations/static', { site: selectedSite.handle, group: groupName, q: search, perPage: perPage }) }}">
              {{ groupName }}
            </a>
          </li>
        {% endfor %}
      {% endif %}
    </ul>
  </nav>
{% endblock %}

{% block content %}

  <div class="flex flex-row align-center" style="margin-top: 12px; gap: 16px; justify-content: space-between; width:100%;">
      <div class="flex align-center">
        <form method="get" id="entries-filter" class="flex" style="gap: 12px; align-items: flex-end;">
          <input type="hidden" name="page" value="1">
          <input type="hidden" name="site" value="{{ selectedSite.handle }}">
          <input type="hidden" name="group" value="{{ group }}">
          <div>
            <label for="q">{{ "Search"|t('pragmatic-web-toolkit') }}</label>
            <input class="text" type="text" id="q" name="q" value="{{ search }}" placeholder="{{ "Key"|t('pragmatic-web-toolkit') }}">
          </div>
          <div>
            <label for="perPage">{{ "Per page"|t('pragmatic-web-toolkit') }}</label>
            <div class="select">
              <select id="perPage" name="perPage">
                {% for option in [50, 100, 250] %}
                  <option value="{{ option }}" {{ option == perPage ? 'selected' : '' }}>{{ option }}</option>
                {% endfor %}
              </select>
            </div>
          </div>
        </form>
      </div>
      <div class="flex align-center">
        <div class="buttons" style="margin-block:0;">
          <form method="post" accept-charset="UTF-8" style="display:inline-block;">
            {{ csrfInput() }}
            {{ actionInput('pragmatic-web-toolkit/translations/scan-templates') }}
            {{ redirectInput('pragmatic-toolkit/translations/static', { group: group, q: search, perPage: perPage, page: page, site: selectedSite.handle }) }}
            <input type="hidden" name="group" value="{{ group }}">
            <button class="btn flex" type="submit">
              <span class="icon" data-icon="refresh" aria-hidden="true"></span>
              <span>{{ 'Scan templates for translations'|t('pragmatic-web-toolkit') }}</span>
            </button>
          </form>
          <button class="btn submit" type="submit" form="translations-form" id="save-translations">{{ "Save"|t('pragmatic-web-toolkit') }}</button>
        </div>
      </div>
  </div>

  

  <form method="post" accept-charset="UTF-8" id="translations-form">
    {{ csrfInput() }}
    {{ actionInput('pragmatic-web-toolkit/translations/save') }}
    {{ redirectInput('pragmatic-toolkit/translations/static', { group: group, q: search, perPage: perPage, page: page, site: selectedSite.handle }) }}
    <input type="hidden" name="returnGroup" id="return-group" value="{{ group }}">
    <input type="hidden" name="returnQ" id="return-q" value="{{ search }}">
    <input type="hidden" name="returnPerPage" id="return-per-page" value="{{ perPage }}">
    <input type="hidden" name="returnPage" id="return-page" value="{{ page }}">
    <input type="hidden" name="returnSite" id="return-site" value="{{ selectedSite.handle }}">

    <table class="data fullwidth" id="translations-table" style="margin-top: 16px;">
      <thead>
        <tr>
          <th style="width: 40px;">
            <label class="checkbox" style="margin: 0;">
              <input type="checkbox" id="select-all-rows" title="{{ 'Select all'|t('pragmatic-web-toolkit') }}">
              <span></span>
            </label>
          </th>
          <th>{{ "Key"|t('pragmatic-web-toolkit') }}</th>
          {% for language in languages %}
            <th>{{ language }}</th>
          {% endfor %}
          <th>{{ "Delete"|t('pragmatic-web-toolkit') }}</th>
        </tr>
      </thead>
      <tbody>
        {% for translation in translations %}
          <tr>
            <td>
              <label class="checkbox" style="margin: 0;">
                <input type="checkbox" class="js-delete-row-checkbox" name="deleteRows[]" value="{{ loop.index0 }}">
                <span></span>
              </label>
            </td>
            <td>
              <input type="hidden" name="translations[{{ loop.index0 }}][id]" value="{{ translation.id }}">
              <input class="text fullwidth" name="translations[{{ loop.index0 }}][key]" value="{{ translation.key }}" required>
              <input type="hidden" name="translations[{{ loop.index0 }}][group]" value="{{ translation.group }}">
            </td>
            {% for language in languages %}
              <td>
                {% set value = '' %}
                {% for site in sites %}
                  {% if site.language == language and translation.values[site.id] is defined %}
                    {% set value = translation.values[site.id] %}
                  {% endif %}
                {% endfor %}
                <input class="text fullwidth" name="translations[{{ loop.parent.loop.index0 }}][values][{{ language }}]" value="{{ value }}">
              </td>
            {% endfor %}
            <td>
              <button
                class="btn small danger"
                type="submit"
                name="deleteRow"
                value="{{ loop.index0 }}"
                title="{{ 'Delete'|t('pragmatic-web-toolkit') }}"
              >
                {{ 'Delete'|t('pragmatic-web-toolkit') }}
              </button>
            </td>
          </tr>
        {% endfor %}

        {% set newIndex = translations|length %}
        {% set selectedGroupForNewRow = group ?: 'site' %}
        <tr data-new-row="1">
          <td></td>
          <td>
            <input class="text fullwidth" name="translations[{{ newIndex }}][key]" placeholder="{{ "New key"|t('pragmatic-web-toolkit') }}">
            <input type="hidden" name="translations[{{ newIndex }}][group]" value="{{ selectedGroupForNewRow }}">
          </td>
          {% for language in languages %}
            <td>
              <input class="text fullwidth" name="translations[{{ newIndex }}][values][{{ language }}]" placeholder="">
            </td>
          {% endfor %}
          <td></td>
        </tr>
      </tbody>
    </table>

  </form>

  <div class="flex flex-row justify-between align-center" style="margin-top: 16px; justify-content: space-between; width:100%;">
    <div class="flex align-center">
      <div class="buttons" style="margin-block:0;">
        <button class="btn" id="add-row" type="button">{{ "Add Row"|t('pragmatic-web-toolkit') }}</button>
        <button class="btn danger" id="delete-selected-rows" type="submit" name="bulkDelete" value="1" form="translations-form">{{ "Delete selected"|t('pragmatic-web-toolkit') }}</button>
      </div>
    </div>
    <div class="flex align-center">
      <div>{{ total }} {{ "total"|t('pragmatic-web-toolkit') }}</div>
      <div class="flex" style="gap: 8px; align-items: center;">
        {% set prevPage = page > 1 ? page - 1 : 1 %}
        {% set nextPage = page < totalPages ? page + 1 : totalPages %}
        <a class="btn {{ page == 1 ? 'disabled' : '' }}" href="{{ url('pragmatic-toolkit/translations/static', { group: group, q: search, perPage: perPage, page: prevPage, site: selectedSite.handle }) }}">{{ "Prev"|t('pragmatic-web-toolkit') }}</a>
        <div>{{ "Page"|t('pragmatic-web-toolkit') }} {{ page }} / {{ totalPages }}</div>
        <a class="btn {{ page == totalPages ? 'disabled' : '' }}" href="{{ url('pragmatic-toolkit/translations/static', { group: group, q: search, perPage: perPage, page: nextPage, site: selectedSite.handle }) }}">{{ "Next"|t('pragmatic-web-toolkit') }}</a>
      </div>
    </div>
  </div>

  <hr style="margin: 24px 0;">
  <h2 style="margin: 0 0 12px;">{{ "Export and import"|t('pragmatic-web-toolkit') }}</h2>
  
  <div class="flex flex-row align-center" style="margin-top: 12px; gap: 16px; justify-content: space-between; width:100%;">
    <div class="flex align-center">
      <div class="btngroup">
        <a class="btn" href="{{ url('pragmatic-toolkit/translations/export', { format: 'csv', site: selectedSite.handle }) }}">{{ "Export CSV"|t('pragmatic-web-toolkit') }}</a>
        <a class="btn" href="{{ url('pragmatic-toolkit/translations/export', { format: 'json', site: selectedSite.handle }) }}">{{ "Export JSON"|t('pragmatic-web-toolkit') }}</a>
        <a class="btn" href="{{ url('pragmatic-toolkit/translations/export', { format: 'php', site: selectedSite.handle }) }}">{{ "Export PHP"|t('pragmatic-web-toolkit') }}</a>
      </div>
    </div>
    <div class="flex align-center">
      <form method="post" enctype="multipart/form-data" accept-charset="UTF-8">
        {{ csrfInput() }}
        {{ actionInput('pragmatic-web-toolkit/translations/import') }}
        {{ redirectInput('pragmatic-toolkit/translations/static', { group: group, q: search, perPage: perPage, page: page, site: selectedSite.handle }) }}
        <div class="flex" style="gap: 8px; align-items: flex-end;">
          <div>
            <label for="format">{{ "Format"|t('pragmatic-web-toolkit') }}</label>
            <div class="select">
              <select id="format" name="format">
                <option value="csv">CSV</option>
                <option value="json">JSON</option>
                <option value="php">PHP (ZIP)</option>
              </select>
            </div>
          </div>
          <input type="file" name="file" required>
          <button class="btn" type="submit">{{ "Import"|t('pragmatic-web-toolkit') }}</button>
        </div>
      </form>
    </div>
  </div>

  

  <hr style="margin: 24px 0;">
  <h2 style="margin: 0 0 12px;">{{ "Groups"|t('pragmatic-web-toolkit') }}</h2>

    <form method="post" accept-charset="UTF-8" style="margin-top: 12px;" id="groups-form">
    {{ csrfInput() }}
    {{ actionInput('pragmatic-web-toolkit/translations/save-groups') }}
    {{ redirectInput('pragmatic-toolkit/translations/static', { group: group, q: search, perPage: perPage, site: selectedSite.handle }) }}

    <table class="data fullwidth">
      <thead>
        <tr>
          <th style="width: 40px;">
            <label class="checkbox" style="margin: 0;">
              <input type="checkbox" id="select-all-groups" title="{{ 'Select all groups'|t('pragmatic-web-toolkit') }}">
              <span></span>
            </label>
          </th>
          <th>{{ "Group"|t('pragmatic-web-toolkit') }}</th>
          <th style="width: 120px;">{{ "Delete"|t('pragmatic-web-toolkit') }}</th>
        </tr>
      </thead>
      <tbody>
        {% for groupName in groups %}
          <tr>
            <td>
              {% if groupName != 'site' %}
                <label class="checkbox" style="margin: 0;">
                  <input type="checkbox" class="js-group-delete-checkbox" name="deleteGroupRows[]" value="{{ loop.index0 }}">
                  <span></span>
                </label>
              {% endif %}
            </td>
            <td>
              <input type="hidden" name="groups[{{ loop.index0 }}][original]" value="{{ groupName }}">
              {% if groupName == 'site' %}
                <input class="text fullwidth" value="{{ groupName }}" disabled>
              {% else %}
                <input class="text fullwidth" name="groups[{{ loop.index0 }}][name]" value="{{ groupName }}">
              {% endif %}
            </td>
            <td>
              {% if groupName != 'site' %}
                <button class="btn small danger" type="submit" name="deleteGroupRow" value="{{ loop.index0 }}">{{ "Delete"|t('pragmatic-web-toolkit') }}</button>
              {% endif %}
            </td>
          </tr>
        {% endfor %}

        {% set newGroupIndex = groups|length %}
        <tr data-new-group="1">
          <td></td>
          <td>
            <input type="hidden" name="groups[{{ newGroupIndex }}][original]" value="">
            <input class="text fullwidth" name="groups[{{ newGroupIndex }}][name]" placeholder="{{ "New group"|t('pragmatic-web-toolkit') }}">
          </td>
          <td></td>
        </tr>
      </tbody>
    </table>

    <div class="buttons" style="margin-top: 12px;">
      <button class="btn" id="add-group-row" type="button">{{ "Add Group"|t('pragmatic-web-toolkit') }}</button>
      <button class="btn danger" type="submit" id="delete-selected-groups" name="bulkDeleteGroups" value="1">{{ "Delete selected"|t('pragmatic-web-toolkit') }}</button>
      <button class="btn submit" type="submit" id="save-groups">{{ "Save Groups"|t('pragmatic-web-toolkit') }}</button>
    </div>
  </form>

  {% js %}
    (function() {
      const filterForm = document.getElementById('entries-filter');
      const searchInput = document.getElementById('q');
      const perPageSelect = document.getElementById('perPage');

      if (filterForm) {
        let searchTimer = null;
        if (searchInput) {
          searchInput.addEventListener('input', function() {
            if (searchTimer) {
              clearTimeout(searchTimer);
            }
            searchTimer = setTimeout(function() {
              filterForm.submit();
            }, 300);
          });
        }
        if (perPageSelect) {
          perPageSelect.addEventListener('change', function() {
            const pageInput = filterForm.querySelector('input[name=\"page\"]');
            if (pageInput) pageInput.value = '1';
            filterForm.submit();
          });
        }
      }

      const translationsTable = document.getElementById('translations-table');
      const translationsForm = document.getElementById('translations-form');
      const addTranslationButton = document.getElementById('add-row');
      const selectAllRowsCheckbox = document.getElementById('select-all-rows');
      const deleteSelectedRowsButton = document.getElementById('delete-selected-rows');
      const saveTranslationsButton = document.getElementById('save-translations');
      const returnGroupInput = document.getElementById('return-group');
      const returnQInput = document.getElementById('return-q');
      const returnPerPageInput = document.getElementById('return-per-page');
      const returnPageInput = document.getElementById('return-page');
      const returnSiteInput = document.getElementById('return-site');
      function readFilterGroup() {
        const hiddenGroupInput = filterForm ? filterForm.querySelector('input[name="group"]') : null;
        return hiddenGroupInput ? hiddenGroupInput.value : '';
      }
      function syncReturnParams() {
        if (returnGroupInput) returnGroupInput.value = readFilterGroup();
        if (returnQInput) returnQInput.value = searchInput ? searchInput.value : '{{ search|e('js') }}';
        if (returnPerPageInput) returnPerPageInput.value = perPageSelect ? perPageSelect.value : '{{ perPage }}';
        if (returnPageInput && !returnPageInput.value) returnPageInput.value = '{{ page }}';
        if (returnSiteInput && !returnSiteInput.value) returnSiteInput.value = '{{ selectedSite.handle|e('js') }}';
      }
      function getDeleteCheckboxes() {
        return translationsTable ? Array.from(translationsTable.querySelectorAll('.js-delete-row-checkbox')) : [];
      }
      function syncSelectAllState() {
        if (!selectAllRowsCheckbox) return;
        const checkboxes = getDeleteCheckboxes();
        const checkedCount = checkboxes.filter(function(cb) { return cb.checked; }).length;
        selectAllRowsCheckbox.checked = checkboxes.length > 0 && checkedCount === checkboxes.length;
        selectAllRowsCheckbox.indeterminate = checkedCount > 0 && checkedCount < checkboxes.length;
      }
      if (translationsTable && addTranslationButton) {
        addTranslationButton.addEventListener('click', function() {
          const body = translationsTable.querySelector('tbody');
          const template = body.querySelector('tr[data-new-row="1"]');
          if (!template) return;

          const newIndex = body.querySelectorAll('tr').length;
          const clone = template.cloneNode(true);
          clone.removeAttribute('data-new-row');

          clone.querySelectorAll('input').forEach(function(input) {
            const name = input.getAttribute('name');
            if (name) {
              input.setAttribute('name', name.replace(/translations\[\d+\]/, 'translations[' + newIndex + ']'));
            }
            input.value = '';
          });

          body.appendChild(clone);
          syncSelectAllState();
        });
      }
      if (translationsTable && selectAllRowsCheckbox) {
        selectAllRowsCheckbox.addEventListener('change', function() {
          getDeleteCheckboxes().forEach(function(cb) {
            cb.checked = selectAllRowsCheckbox.checked;
          });
          syncSelectAllState();
        });
        translationsTable.addEventListener('change', function(event) {
          if (event.target && event.target.classList.contains('js-delete-row-checkbox')) {
            syncSelectAllState();
          }
        });
        syncSelectAllState();
      }
      if (translationsForm && deleteSelectedRowsButton) {
        translationsForm.addEventListener('submit', function(event) {
          const submitter = event.submitter;
          syncReturnParams();
          if (submitter && submitter.id === 'delete-selected-rows') {
            const selectedCount = getDeleteCheckboxes().filter(function(cb) { return cb.checked; }).length;
            if (selectedCount === 0) {
              event.preventDefault();
              return;
            }
            if (!confirm('{{ "Delete selected rows?"|t('pragmatic-web-toolkit')|e('js') }}')) {
              event.preventDefault();
            }
          }
        });
      }
      if (translationsForm && saveTranslationsButton) {
        document.addEventListener('keydown', function(event) {
          const key = (event.key || '').toLowerCase();
          if (key !== 's') return;
          if (!(event.metaKey || event.ctrlKey) || event.altKey) return;
          event.preventDefault();
          syncReturnParams();
          if (typeof translationsForm.requestSubmit === 'function') {
            translationsForm.requestSubmit(saveTranslationsButton);
          } else {
            saveTranslationsButton.click();
          }
        });
      }

      const addGroupButton = document.getElementById('add-group-row');
      const groupsForm = document.getElementById('groups-form');
      const selectAllGroupsCheckbox = document.getElementById('select-all-groups');
      function getGroupDeleteCheckboxes() {
        return groupsForm ? Array.from(groupsForm.querySelectorAll('.js-group-delete-checkbox')) : [];
      }
      function syncSelectAllGroupsState() {
        if (!selectAllGroupsCheckbox) return;
        const checkboxes = getGroupDeleteCheckboxes();
        const checkedCount = checkboxes.filter(function(cb) { return cb.checked; }).length;
        selectAllGroupsCheckbox.checked = checkboxes.length > 0 && checkedCount === checkboxes.length;
        selectAllGroupsCheckbox.indeterminate = checkedCount > 0 && checkedCount < checkboxes.length;
      }
      if (addGroupButton) {
        addGroupButton.addEventListener('click', function() {
          const form = addGroupButton.closest('form');
          const body = form ? form.querySelector('tbody') : null;
          const template = body ? body.querySelector('tr[data-new-group="1"]') : null;
          if (!template) return;

          const newIndex = body.querySelectorAll('tr').length;
          const clone = template.cloneNode(true);
          clone.removeAttribute('data-new-group');

          clone.querySelectorAll('input').forEach(function(input) {
            const name = input.getAttribute('name');
            if (name) {
              input.setAttribute('name', name.replace(/groups\[\d+\]/, 'groups[' + newIndex + ']'));
            }
            input.value = '';
          });

          body.appendChild(clone);
          syncSelectAllGroupsState();
        });
      }
      if (groupsForm && selectAllGroupsCheckbox) {
        selectAllGroupsCheckbox.addEventListener('change', function() {
          getGroupDeleteCheckboxes().forEach(function(cb) {
            cb.checked = selectAllGroupsCheckbox.checked;
          });
          syncSelectAllGroupsState();
        });
        groupsForm.addEventListener('change', function(event) {
          if (event.target && event.target.classList.contains('js-group-delete-checkbox')) {
            syncSelectAllGroupsState();
          }
        });
        syncSelectAllGroupsState();
      }
      if (groupsForm) {
        groupsForm.addEventListener('submit', function(event) {
          const submitter = event.submitter;
          if (!submitter) return;
          if (submitter.id === 'delete-selected-groups') {
            const selectedCount = getGroupDeleteCheckboxes().filter(function(cb) { return cb.checked; }).length;
            if (selectedCount === 0) {
              event.preventDefault();
              return;
            }
            if (!confirm('{{ "Delete selected groups?"|t('pragmatic-web-toolkit')|e('js') }}')) {
              event.preventDefault();
            }
            return;
          }
          if (submitter.name === 'deleteGroupRow') {
            if (!confirm('{{ "Delete this group?"|t('pragmatic-web-toolkit')|e('js') }}')) {
              event.preventDefault();
            }
          }
        });
      }
    })();
  {% endjs %}
{% endblock %}
